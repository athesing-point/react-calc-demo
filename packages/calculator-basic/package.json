{
  "scripts": {
    "build": "bun run build:css && bun run build:dev && bun run build:prod",
    "build:css": "tailwindcss -i ./src/tailwind.css -o ./dist/tailwind.css",
    "build:dev": "bun build src/index.tsx --outdir=dist --target=browser",
    "build:prod": "bun build src/index.tsx --outdir=dist --target=browser --minify"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.23",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.5.4"
  }
}
